script/source = "extends CardData

@export var damage := 5

func apply_effects(targets: Array[Node], modifiers: ModifierHandler) -> void:
	damage = modifiers.get_modified_value(damage, Modifier.Type.DMG_DEALT)
	Apply.damage(targets, damage)
	SFXPlayer.play(sfx)
	await wait(0.1)
	Apply.damage(targets, damage)
	SFXPlayer.play(sfx)
"

